{% extends "layout.html.twig" %}

{% block title %}{{ section }}{% endblock %}
{% block main %}
    <div class="container" style="margin-top: 100px; margin-bottom: 50px;">
        <div class="row">
            {% for item in items %}
                {% if item.filename is empty %}
                    <div class="col-lg-4 col-sm-6">
                        <a href="{{ auto_site_base_url }}/admin/front-page/list/{{ page }}/{{ section }}/{{ item.id }}">
                            <h2 class="text-center text-white" style="margin-top: 50%">{{ item.title }}</h2>
                        </a>
                    </div>

                {% else %}
                    {% if page == 'portfolios' %}
                        <div class="col-lg-4 col-sm-6">
                            <a href="{{ auto_site_base_url }}/admin/front-page/list/{{ page }}/{{ section }}/{{ item.id }}">
                                <div class="thumbnail img-raised">
                                    <img src="{{ generatePortfolioAbsoluteUrl(item.filename) }}" alt="placeholder" id="placeholder" style="width: 100%;">
                                </div>
                            </a>

                        </div>
                    {% else %}
                        <div class="col-lg-4 col-sm-6">
                            <a href="{{ auto_site_base_url }}/admin/front-page/list/{{ page }}/{{ section }}/{{ item.id }}">
                                <div class="thumbnail img-raised center">
                                    <img src="{{ generateImageAbsoluteUrl(item.filename) }}" alt="placeholder" id="placeholder">
                                </div>
                            </a>

                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>

    </div>
{% endblock %}

{% block bottom_scripts %}
    <script>
        $('body').addClass('admin');
    </script>
{% endblock %}